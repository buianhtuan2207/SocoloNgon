{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["jest", "node"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "allowJs": true,
    "noEmit": true,

    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
